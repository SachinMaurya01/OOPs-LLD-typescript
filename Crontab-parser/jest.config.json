{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/"],
  "testMatch": [
    "**/test/**/*.spec.ts",
    "**/test/**/*.test.ts"
  ],
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "lcov", "text", "clover"]
}